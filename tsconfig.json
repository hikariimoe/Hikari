{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "listeners/**/*.ts",
        "actions/**/*.ts",
        "providers/**/*.ts",
        "sources/**/*.ts",
        "commands/**/*.ts"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*"
    ],
    "files": [
        "bot.ts",
        "types/pieces.d.ts"
    ]
}